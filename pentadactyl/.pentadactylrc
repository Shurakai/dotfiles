"hg6924

loadplugins '\.(js|penta)$'
group user
set defsearch=ddg

command! -nargs=1 fd open de.langenscheidt.com/franzoesisch-deutsch/<args>
map <F2> :fd

map ga :b #<CR>

" Homerow of my keyboard
set hintkeys=asdfghjkl√∂
" Set font size for hints
hi -a Hint font-size: 10pt !important;

" Highlight matches when searching
set hlfind
set incfind
" Ignore cases unless capital letters are given
set findcase=smart

"Proxy switch. From http://blog.nikhilism.com/2012/01/toggling-proxy-settings-quickly-with.html
command proxy -nargs=1 :set! network.proxy.type=<args>

" Faster scrolling!
map -b j 8j
map -b k 8k
map -b h 8h
map -b l 8l

" This is required for the "passff" plugin to work correctly, see
" bug report. It will be hidden by a style (see same bug report):
" https://github.com/jvenant/passff/issues/37#issuecomment-81294520
set guioptions+=T

